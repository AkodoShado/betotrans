                new GaleriaObrazek('@Url.Content("~/Images/kruszywa/mini/piasek_kopalniany_195x145.jpg")', '@Url.Content("~/Images/kruszywa/piasek_kopalniany.jpg")', 'piasek kopalniany', 'ofertaImage'),
                new GaleriaObrazek('@Url.Content("~/Images/kruszywa/mini/piasek_plukany_0-2_195x145.jpg")', '@Url.Content("~/Images/kruszywa/piasek_plukany_0-2.jpg")', 'piasek płukany 0-2', 'ofertaImage'),
                new GaleriaObrazek('@Url.Content("~/Images/kruszywa/mini/piasek_plukany_05-2_195x145.jpg")', '@Url.Content("~/Images/kruszywa/piasek_plukany_05-2.jpg")', 'piasek płukany 0,5-2', 'ofertaImage'),
                new GaleriaObrazek('@Url.Content("~/Images/kruszywa/mini/mieszanka_do_betonu_0-16_195x145.jpg")', '@Url.Content("~/Images/kruszywa/mieszanka_do_betonu_0-16.jpg")', 'mieszanka do betonu 0-16', 'ofertaImage'),
                new GaleriaObrazek('@Url.Content("~/Images/kruszywa/mini/zwir_2-8_195x145.jpg")', '@Url.Content("~/Images/kruszywa/zwir_2-8.jpg")', 'żwir 2-8', 'ofertaImage'),
                new GaleriaObrazek('@Url.Content("~/Images/kruszywa/mini/zwir_2-16_195x145.jpg")', '@Url.Content("~/Images/kruszywa/zwir_2-16.jpg")', 'żwir 2-16', 'ofertaImage'),
                new GaleriaObrazek('@Url.Content("~/Images/kruszywa/mini/zwir_8-16_195x145.jpg")', '@Url.Content("~/Images/kruszywa/zwir_8-16.jpg")', 'żwir 8-16', 'ofertaImage'),
                new GaleriaObrazek('@Url.Content("~/Images/kruszywa/mini/zwir_16-35_195x145.jpg")', '@Url.Content("~/Images/kruszywa/zwir_16-35.jpg")', 'żwir 16-35', 'ofertaImage'),
            ]);

            self.ofertaDrogowaImageList = ko.observableArray([
                new GaleriaObrazek('@Url.Content("~/Images/kruszywa/mini/kwarcyt_195x145.jpg")', '@Url.Content("~/Images/kruszywa/kwarcyt.jpg")', 'kwarcyt', 'ofertaImage'),
                new GaleriaObrazek('@Url.Content("~/Images/kruszywa/mini/dolomit_195x145.jpg")', '@Url.Content("~/Images/kruszywa/dolomit.jpg")', 'dolomit', 'ofertaImage'),
                new GaleriaObrazek('@Url.Content("~/Images/kruszywa/mini/wapien_195x145.jpg")', '@Url.Content("~/Images/kruszywa/wapien.jpg")', 'wapień', 'ofertaImage'),
            ]);

            self.ofertaOgrodniczaImageList = ko.observableArray([
                new GaleriaObrazek('@Url.Content("~/Images/kruszywa/mini/zwir_16-32_195x145.jpg")', '@Url.Content("~/Images/kruszywa/zwir_16-32.jpg")', 'żwir 16-32', 'ofertaImage'),
                new GaleriaObrazek('@Url.Content("~/Images/kruszywa/mini/glazy_195x145.jpg")', '@Url.Content("~/Images/kruszywa/glazy.jpg")', 'głazy', 'ofertaImage'),
                new GaleriaObrazek('@Url.Content("~/Images/kruszywa/mini/torf_195x145.jpg")', '@Url.Content("~/Images/kruszywa/torf.jpg")', 'torf', 'ofertaImage'),
            
            ]);

            self.ofertaBudowlanaWierszeKolumny = ko.computed(function () {
                return podzielNaWierszeKolumny(self.ofertaBudowlanaImageList(), 3);
            });

            self.ofertaDrogowaWierszeKolumny = ko.computed(function () {
                return podzielNaWierszeKolumny(self.ofertaDrogowaImageList(), 3);
            });

            self.ofertaOgrodniczaWierszeKolumny = ko.computed(function () {
                return podzielNaWierszeKolumny(self.ofertaOgrodniczaImageList(), 3);
            });

        };


        $(document).ready(function () {
            ko.applyBindings(new OfertaImageViewModel());
        });
    </script>
}