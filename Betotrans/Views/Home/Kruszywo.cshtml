@model Betotrans.Models.KruszywoViewModel
@{
    ViewBag.Title = @Model.Title;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section body{

    <div class="right">
        <article class="tekst">
            <h1 class="ng">@Model.Title</h1>
            <figure style="float: left">
                <a class="fancybox" href="@Url.Content(Model.ImgUrl)" title="@Model.Title">

                    <img class="agregateImage" style="display:block" src="@Url.Content(@Model.MiniImgUrl)" alt="@Model.Title" title="@Model.Title"/>
                    <!-- <figcaption style="float:left" >Pospółka</figcaption><br /> -->
                </a>

            </figure>

                @*                    <br />
                    <b>Uziarnienie graniczne:</b> @Model.Size<br />
                    <b>Przeznaczenie do:</b> @Model.IntendedFor <br />
                    <br />*@
            <p style="width:550px;" >
                <br />

                @Model.Description
                </p>
        </article>
    </div>
}
