@section scripts{
    <script type="text/javascript">
        function initialize() {
            var xy = new google.maps.LatLng(51.995121, 20.286233);

            var mapOptions = {
                center: xy,
                zoom: 16,
                mapTypeId: google.maps.MapTypeId.ROADMAP,
                scrollwheel : false,
                
                panControl : true,
                scaleControl : true
            };

            var map = new google.maps.Map(document.getElementById("map_canvas"), mapOptions);

            var marker = new google.maps.Marker({
                position: xy,
                map: map,
                title: 'Beto-Trans'
            });
        }

        $(document).ready(function () {
            initialize();
        });
    </script>
}

